{
  "manifest_version": 3,
  "name": "Image Tag Copier",
  "version": "1.0.0",
  "description": "Copy img tag on hover with Cmd+C/Ctrl+C",
  "permissions": ["activeTab", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 